
@{
    ViewBag.Title = "trychat";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>trychat</h2>
<div id="chat_widnow">
    <div id="chat_title_bar">
        <span class="col-sm-9 text-primary"><strong>Online Users</strong></span>
        <div id="chat_min_button"><i class="fa fa-plus-square"></i></div>
    </div>
    <div id="chat_box" style="display: none;overflow-y:auto;">
    </div>
</div>
<div id="chat_div"></div>
<input id="hdId" type="hidden" />
<input id="hdUserName" type="hidden" />
<input ID="hdnCurrentUserName" Value="@ViewBag.UserName" type="hidden" />
<input ID="hdnCurrentUserID" Value="@ViewBag.UserId" type="hidden" />
@section scripts {

    <script src="~/Scripts/jquery.signalR-2.3.0.min.js"></script>
    <script src="~/signalr/hubs"></script>

    <script src="~/Custom/JS/jquery.ui.chatbox.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/Custom/JS/chatboxManager.js"></script>
}
@Styles.Render("~/Custom/CSS/jquery.ui.chatbox.css")
@Styles.Render("~/Custom/CSS/style.css")



