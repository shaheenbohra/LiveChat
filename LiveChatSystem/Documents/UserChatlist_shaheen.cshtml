                            <input type="hidden" class="clsDateTimeReceived" value="@d.DateTimeReceived" />
                            <input type="hidden" class="clsRecipientName" value="@d.RecipientName" />
                            <input type="hidden" class="clsRecipientPhoneNumber" value="@d.RecipientPhoneNumber" />
                            <input type="hidden" class="clsMessage" value="@d.Message" />
                            <input type="hidden" class="clsMaskedPhoneNumber" value="@d.MaskedPhoneNumber" />
                           
